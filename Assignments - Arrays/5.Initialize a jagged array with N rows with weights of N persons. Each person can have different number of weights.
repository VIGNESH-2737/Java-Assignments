import java.util.Scanner;

public class JaggedArrayWeights {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter number of persons (N): ");
        int N = scanner.nextInt();

        int[][] weights = new int[N][];
        
        for (int i = 0; i < N; i++) {
            System.out.print("Enter number of weights for person " + (i + 1) + ": ");
            int numWeights = scanner.nextInt();
            weights[i] = new int[numWeights];

            System.out.println("Enter the weights for person " + (i + 1) + ":");
            for (int j = 0; j < numWeights; j++) {
                weights[i][j] = scanner.nextInt();
            }
        }

        enterWeight(weights, 1, 0, 65);
        int minWeight = getMinimumWeight(weights, 1);
        System.out.println("Minimum weight of person 2: " + minWeight);

        scanner.close();
    }

    public static void enterWeight(int[][] weights, int personIndex, int weightIndex, int newWeight) {
        if (personIndex >= 0 && personIndex < weights.length 
            && weightIndex >= 0 && weightIndex < weights[personIndex].length) {
            weights[personIndex][weightIndex] = newWeight;
            System.out.println("Weight updated successfully.");
        } else {
            System.out.println("Invalid person or weight index.");
        }
    }

    public static int getMinimumWeight(int[][] weights, int personIndex) {
        if (personIndex < 0 || personIndex >= weights.length) {
            System.out.println("Invalid person index.");
            return -1;
        }

        int min = weights[personIndex][0];
        for (int weight : weights[personIndex]) {
            if (weight < min) {
                min = weight;
            }
        }
        return min;
    }
}
