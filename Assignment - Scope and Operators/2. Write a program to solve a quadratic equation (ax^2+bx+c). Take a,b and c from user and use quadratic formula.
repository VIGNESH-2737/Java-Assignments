public class Main {
    public static void main(String[] args) {
        
        Scanner scan = new Scanner(System.in);

        System.out.println("Enter Co-efficient for x^2:");
        int a = scan.nextInt();
        
        System.out.println("Enter Co-efficient for x:");
        int b = scan.nextInt();
        
        System.out.println("Enter Constant term:");
        int c = scan.nextInt();
        
        System.out.printf("The Solution for the Polynomial Equation : %d(x^2)+%dx+%d",a,b,c);
        
        System.out.println();
        int x1 = (int) ((-b) + Math.sqrt((b*b)-(4*a*c)))/(2*a) ;
        int x2 = (int) ((-b) - Math.sqrt((b*b)-(4*a*c)))/(2*a) ;
        
        
        System.out.println("x= "+x1);
                
        System.out.println("x= "+x2);

    }
}
